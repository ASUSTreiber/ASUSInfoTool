<Window x:Class="ASUSInfoTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ASUSInfoTool"
        mc:Ignorable="d"
        Title="ASUS Info Tool" Height="416" Width="400" Icon="/Asusinfo64.ico" ResizeMode="NoResize" WindowStyle="SingleBorderWindow">
    <Grid>
        <GroupBox  FontSize="14" Header="Geräte Info" Margin="5,0,5,260" Padding="10" HorizontalAlignment="Stretch" VerticalAlignment="Top">
            <StackPanel VerticalAlignment="Top">
                <TextBlock FontSize="14">Model:</TextBlock>
                <TextBlock FontSize="14">Seriennummer:</TextBlock>
                <TextBlock FontSize="14">Biosversion:</TextBlock>
                <TextBlock FontSize="14">Windowsversion:</TextBlock>
            </StackPanel>
        </GroupBox>
        <GroupBox  FontSize="14" Header="Geräte Info" Padding="10" VerticalAlignment="Top" Margin="5,120,5,0">
            <StackPanel VerticalAlignment="Top">
                <Label Content="Label"/>
                <Label Content="Label"/>
                <Label Content="Label"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
